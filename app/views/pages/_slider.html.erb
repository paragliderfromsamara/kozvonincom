<% if !@slider_photos.blank? %>
    <%slds = ""%>
    <%buts = ""%>
    <%i=0%>
        <%@slider_photos.each do |p|%>
            <%slds += "<li class=\"orbit-slide#{" is-active" if i==0}\"><img class=\"orbit-image\" src=\"#{ p.link.large_slider }\"></li>"%>
            <%buts += "<button #{'class="is-active"' if i==0} data-slide=\"#{i}\"><span class=\"show-for-sr\">Second slide details.</span></button>"%>    
            
            <%i+=1%>
        <%end%>
    <div class="orbit" role="region" aria-label="Favorite Space Pictures" data-orbit>
        <button class="orbit-previous"><span class="show-for-sr">Previous Slide</span>&#9664;&#xFE0E;</button>
            <button class="orbit-next"><span class="show-for-sr">Next Slide</span>&#9654;&#xFE0E;</button>
         <ul class="orbit-container">
             <%=slds.html_safe%>
         </ul>
         <nav class="orbit-bullets">
             <%=buts.html_safe%>
         </nav>
    </div>
<%end%>