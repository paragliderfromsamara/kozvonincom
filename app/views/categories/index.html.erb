<div class = 'row'>
    <div class = 'small-12 columns'>
        <p id="notice"><%= notice %></p>

        <h1>Listing Categories</h1>

        <table>
          <thead>
            <tr>
              <th>Ru name</th>
              <th>Com name</th>
              <th>Ru description</th>
              <th>Com description</th>
              <th>Order number</th>
              <th>Is enable</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.ru_name %></td>
                <td><%= category.com_name %></td>
                <td><%= category.ru_description %></td>
                <td><%= category.com_description %></td>
                <td><%= category.order_number %></td>
                <td><%= category.is_enable %></td>
                <td><%= link_to 'Show', category %></td>
                <td><%= link_to 'Edit', edit_category_path(category) %></td>
                <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Category', new_category_path %>
    </div>
</div>

