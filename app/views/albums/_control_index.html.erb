<div class = 'row'>
    <div class = 'small-12 columns'>
        <p id="notice"><%= notice %></p>

        

        <%= link_to 'Добавить альбом', new_album_path %>
        <br>
        <br>
        <table>
          <thead>
            <tr>
              <th>Категория</th>
              <th>Название</th>
              <th>Статус</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @albums.each do |album| %>
              <tr>
                <td><%= album.category.loc_name(params[:locale]) %></td>  
                <td><%= album.loc_name(params[:locale]) %></td>
                <td><%= album.status %></td>
                <td><%= link_to 'Перейти', album %></td>
                <td><%= link_to 'Изменить', edit_album_path(album) %></td>
                <td><%= link_to 'Удалить', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

    </div>
</div>

