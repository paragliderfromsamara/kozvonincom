<!DOCTYPE html>
<html>
  <head>
    <title><%= my_title %></title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <!-- Yandex.Metrika counter -->
      <script type="text/javascript">
          (function (d, w, c) {
              (w[c] = w[c] || []).push(function() {
                  try {
                      w.yaCounter42061204 = new Ya.Metrika({
                          id:42061204,
                          clickmap:true,
                          trackLinks:true,
                          accurateTrackBounce:true,
                          trackHash:true
                      });
                  } catch(e) { }
              });

              var n = d.getElementsByTagName("script")[0],
                  s = d.createElement("script"),
                  f = function () { n.parentNode.insertBefore(s, n); };
              s.type = "text/javascript";
              s.async = true;
              s.src = "https://mc.yandex.ru/metrika/watch.js";

              if (w.opera == "[object Opera]") {
                  d.addEventListener("DOMContentLoaded", f, false);
              } else { f(); }
          })(document, window, "yandex_metrika_callbacks");
      </script>
      <noscript><div><img src="https://mc.yandex.ru/watch/42061204" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
      <!-- /Yandex.Metrika counter -->
      <div id = 'top'>
          <div class="top-bar">
              <div class = 'row'>
                  <div class = 'small-12 columns'>
                    <div class="top-bar-title">
              			<ul class="menu">
              			  <li><a href = '<%= root_path %>' ><%= t(:site_link) %></a></li>
              			</ul>
                    </div>
                      <div class="top-bar-right">
                			<ul id = 'dd-menu' class="dropdown menu" data-dropdown-menu>
                                <%= drawMenu.html_safe %>
                			    <li><a id = "open-filter" ><i class = 'fi-filter'></i><%= t(:filter_link) %></a></li>
                			</ul>
                      </div>
                  </div>
              </div>
          </div>
         <%= photo_filter %>
         <%= my_header %> 
    </div>
    <div id = "middle">
		<%= yield %>
	</div>
    <div id = 'footerMark'></div>
	<div id = "footer">
        <div class = 'row'>
            <div class = 'small-6 columns'>
                <span id = "contacts-title">
                    <%= t(:contacts) %>
                </span>
                <ul id = 'social-list'>
                    <li>
                        <a rel = 'nofollow' target = '_blank' href = 'https://www.facebook.com/roman.kozvonin'>
           				    <img src = "/social_svg/fb.svg" class = "social-icons normal">
                            <img src = "/social_svg/fb_hover.svg" class = "social-icons hovered">
                        </a>
                    </li>
                    <li>
                        <a rel = 'nofollow' target = '_blank' href = 'https://vk.com/roman_kozvonin'>
           				    <img src = "/social_svg/vk.svg" class = "social-icons normal">
                            <img src = "/social_svg/vk_hover.svg" class = "social-icons hovered">
                        </a>
                    </li>
                </ul>
            </div>
            <div class = 'small-6 columns'>
                <span id = "contacts-title" class = 'float-right' style = "margin-top: 35px;">
                    <%= t(:roman_kozvonin) %>, <%= Time.now.strftime("%Y") %>
                </span> 
            </div>
        </div>
	</div>
  </body>
</html>
